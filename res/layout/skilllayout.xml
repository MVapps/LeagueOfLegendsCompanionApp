<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skill"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgskills"
    android:cacheColorHint="#00000000"
    android:orientation="vertical" 
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/skillPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="5dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:linksClickable="false"
            android:src="@drawable/ahri_square_0" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/skillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:linksClickable="false"
                android:text="Skill Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:typeface="serif" />

            <TextView
                android:id="@+id/skillStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:linksClickable="false"
                android:paddingRight="5dp"
                android:text="Skill stats"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#111111" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/skillText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:linksClickable="false"
        android:text="Skill text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#111111" />

</LinearLayout>